<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#E10015" 
   >
 
        <RelativeLayout
        android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/homebar">
       <ImageButton
                   android:id="@+id/imageButton"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dip"
                   android:src="@drawable/ic_launcher"
                   android:background="@drawable/ic_launcher" />
  <LinearLayout
       android:layout_alignParentRight="true"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
     >

    
     <ImageButton
                   android:id="@+id/imageButton2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_launcherdoch"
                   android:background="#00FFFFFF" />
      <ImageButton
                   android:id="@+id/imageButton3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_launcherclinich"
                   android:background="#00FFFFFF" />
      <ImageButton
                   android:id="@+id/imageButton4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_launcherpayment"
 android:background="#00FFFFFF" 
                    />
        </LinearLayout>
    
    
    
    
</RelativeLayout>
    
    
<ScrollView
     android:layout_below="@+id/top"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true"
android:background="#E10015" 
   >
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:background="#E10015" >
 
        <!--  Header  Starts-->
        <LinearLayout android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <!-- Logo Start-->

                   <ImageView
                android:id="@+id/ImageView3_Left"
                android:layout_width="match_parent"
                android:layout_height="300sp"

                ></ImageView>

                <!-- Logo Ends -->
        </LinearLayout>
        <!--  Header Ends -->
       
 <!-- Login Form -->
       
    
        <!-- Login Form Ends -->

        <RelativeLayout
             
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/header"
            android:orientation="vertical"
            android:tileMode="repeat" >

           <TextView android:id="@+id/lblmessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Your Booking Detials:"
                android:textSize="12dip"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
                         
   <TextView
       android:id="@+id/lblbookclinic"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblmessage"
       android:layout_marginTop="5dip"
       android:textColor="#FFFFFF"
       android:textSize="10dip" />
   <TextView
       android:id="@+id/lblsyndrome"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblbookclinic"
       android:text="Symptoms:"
       android:layout_marginTop="10dip"
       android:textColor="#FFFFFF"
       android:textStyle="bold"
       android:textSize="12dip" />
   <TextView
       android:id="@+id/lblsyndromes"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblsyndrome"
       android:layout_marginTop="5dip"
      
       android:textColor="#FFFFFF"
       android:textSize="10dip" />
 <TextView
       android:id="@+id/lbldesc"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblsyndromes"
       android:text="Description:"
       android:layout_marginTop="10dip"
       android:textColor="#FFFFFF"
       android:textStyle="bold"
       android:textSize="12dip" />
   <TextView
       android:id="@+id/lbldescz"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lbldesc"
       android:layout_marginTop="5dip"
      
       android:textColor="#FFFFFF"
       android:textSize="10dip" />
   <TextView
       android:id="@+id/lblmc"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lbldescz"
       android:text="MC (if any)"
       android:layout_marginTop="10dip"
       android:textColor="#FFFFFF"
       android:textStyle="bold"
       android:textSize="12dip" />
   <TextView
       android:id="@+id/lblmcz"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblmc"
       android:layout_marginTop="5dip"
      
       android:textColor="#FFFFFF"
       android:textSize="10dip" />
 <TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblmcz"
       android:layout_marginTop="10dip"
       android:text="Total Price:"
       android:textColor="#FFFFFF"
       android:textStyle="bold"
       android:textSize="12dip" />
 <TextView
       android:id="@+id/textView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/textView1"
       android:layout_marginTop="10dip"
       android:text=""
       android:textColor="#FFFFFF"
        />

 

  

  </RelativeLayout>
  <Button
       android:id="@+id/btncheckout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"

       android:onClick="onBuyPressed"
       android:text="Checkout"
       android:layout_alignParentRight="true"
       android:layout_alignParentBottom="true"
                                     android:alpha="1" 
                             android:textSize="20dip"
android:background="@drawable/buttonstyle"
                         
       />
  </RelativeLayout>
  
  </ScrollView>
  


  </RelativeLayout>
