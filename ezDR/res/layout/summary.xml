<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true"
    android:background="#E10015">

      <RelativeLayout
        android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/homebar">
  <LinearLayout
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
     >

    <ImageButton
                   android:id="@+id/imageButton1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dip"
                   android:src="@drawable/ic_launcher"
                   android:background="@drawable/ic_launcher" />
    
        </LinearLayout>
    <TextView 
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dip"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="Summary of Booking"
        android:textStyle="bold"
        android:textSize="20dip"
        android:id="@+id/pagename"
        />
    
    
    
</RelativeLayout>
    
<ScrollView
      android:layout_below="@+id/top"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
 

                 <TextView android:id="@+id/lblmessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Your Booking:"
                android:textSize="12dip"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
                         
   <TextView
       android:id="@+id/lblbookclinic"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblmessage"
       android:layout_marginTop="5dip"
       android:textColor="#FFFFFF"
       android:textSize="10dip" />
     <TextView
       android:id="@+id/lblrnn"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblbookclinic"
       android:text="Receipt Number:"
       android:layout_marginTop="10dip"
       android:textColor="#FFFFFF"
       android:textStyle="bold"
       android:textSize="12dip" />
   <TextView
       android:id="@+id/lblrn"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblrnn"
       android:layout_marginTop="5dip"
      
       android:textColor="#FFFFFF"
       android:textSize="10dip" />
   <TextView
       android:id="@+id/lblsyndrome"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblrn"
       android:text="Symptoms:"
       android:layout_marginTop="10dip"
       android:textColor="#FFFFFF"
       android:textStyle="bold"
       android:textSize="12dip" />
   <TextView
       android:id="@+id/lblsyndromes"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblsyndrome"
       android:layout_marginTop="5dip"
      
       android:textColor="#FFFFFF"
       android:textSize="10dip" />
 <TextView
       android:id="@+id/lbldesc"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblsyndromes"
       android:text="Description:"
       android:layout_marginTop="10dip"
       android:textColor="#FFFFFF"
       android:textStyle="bold"
       android:textSize="12dip" />
   <TextView
       android:id="@+id/lbldescz"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lbldesc"
       android:layout_marginTop="5dip"
      
       android:textColor="#000000"
       android:textSize="10dip" />
   <TextView
       android:id="@+id/lblmc"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lbldescz"
       android:text="MC (if any)"
       android:layout_marginTop="10dip"
       android:textColor="#FFFFFF"
       android:textStyle="bold"
       android:textSize="12dip" />
   <TextView
       android:id="@+id/lblmcz"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblmc"
       android:layout_marginTop="5dip"
      
       android:textColor="#FFFFFF"
       android:textSize="10dip" />
 <TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/lblmcz"
       android:layout_marginTop="10dip"
       android:text="Paid:"
       android:textColor="#FFFFFF"
       android:textStyle="bold"
       android:textSize="12dip" />
 <TextView
       android:id="@+id/textView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/textView1"
       android:layout_marginTop="10dip"
       android:text=""
       android:textColor="#FFFFFF"
        />
 <TextView
       android:id="@+id/textView3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/textView2"
       android:layout_marginTop="10dip"
       android:text="Booked Date:"
       android:textColor="#FFFFFF"
       android:textStyle="bold"
       android:textSize="12dip" />
 <TextView
       android:id="@+id/textView4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/textView3"
       android:layout_marginTop="10dip"
       android:text=""
       android:textColor="#FFFFFF"
        />
 
      
        <Button
       android:id="@+id/btnreturn"
       android:background="@drawable/buttonstyle"
                android:text="Return to Main"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       
       android:layout_alignParentRight="true"
       android:layout_alignParentBottom="true"
       android:textSize="20dip"
       />
      
      
  </RelativeLayout>
  
</ScrollView>
</RelativeLayout>